@model IEnumerable<KSBookingMVC.Models.ListOfHotels>

@{
    ViewData["Title"] = "Index";
}
@{
    ViewData["Title"] = "KS HotelBooking";
}
<section></section>


<body>
    <div class="background-image">
        <div class="text-overlay">
            <h1>World is a book, Read the entire book in this one page</h1>
            <p> Book your hotels across India, To see the wonders...</p>
        </div>
    </div>
</body>
<br />
<br />
<br />

<section class="packages" id="packages">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="hotels">
                    <a asp-controller="Home" asp-action="Reserverooms" class="image-link" onclick="getname('@item.Hotelname')">
                        <div class="image">
                            <figure>
                                <img class="item" src="@item.Imagelink" style="width: 300px; height: 300px;padding:2rem">
                                <figcaption>@item.Hotelname<br>@item.Place</figcaption>
                            </figure>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</section>
<style>
    .background-image {
        background-image: url('https://c4.wallpaperflare.com/wallpaper/921/708/937/best-hotels-travel-thailand-tourism-wallpaper-preview.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        width: 100%;
        height: 100vh; /* Adjust the height as needed */
        position: relative;
    }

    .text-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: white;
        font-size: 24px;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    }

    .image {
        background-size: cover;
        background-repeat: no-repeat;
        width: 100%;
        height: 85%;
        position: absolute;
        .heading span

    {
        font-size: 3.5rem;
        background-color: orange;
        color: var(--blue);
        border-radius: .5rem;
        padding: .2rem 1rem;
    }

    .heading span.space {
        background: none;
    }

    .heading span {
        font-size: 3rem;
    }

    h4 {
        font-size: 17px;
    }

    h1 {
        font-weight: bold;
        color: rgb(255, 253, 253);
    }


    .btn {
        display: inline;
        margin: auto;
        background: orange;
        color: balck;
        padding: .4rem 2rem;
        border: .2rem solid var(--orange);
        cursor: pointer;
        font-size: 1, 7rem;
        margin-left: 40px;
    }

        .btn:hover {
            background: orange;
            color: var(--orange);
        }

    .item {
        margin: 20px;
        border-radius: 2rem;
    }


    .image-link {
        display: inline-block;
        position: relative;
    }

        .image-link img {
            display: block;
        }

    figure {
        position: relative;
    }

    figcaption {
        position: absolute;
        margin-left: 25px;
        left: 0;
        top: 0;
        font-size: 35px;
        font-weight: bold;
        text-align: center;
        background-color: none;
        color: black;
        padding: 10px;
    }

    .packages {
        padding: 1rem;
        margin: 1rem;
    }


    .flex-container-two {
        display: flex;
        width: 100%;
        flex-direction: row;
        margin: 0;
    }

    .offer {
        background-color: #eee;
        padding: 10rem 4rem;
    }

        .offer .offer-text {
            display: block;
        }

 
</style>

