@model IEnumerable<KSBookingMVC.Models.ListOfHotels>

@{
    ViewData["Title"] = "GetHotellist";
}

<h1>GetHotellist</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HotelsId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagelink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotelname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fromdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Todate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Noofperson)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HotelsId)
            </td>
            <td>
                <img src="@item.Imagelink" width=" 100px"; hight="100px" >
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotelname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fromdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Todate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Noofperson)
            </td>
            <td>              
                    @Html.ActionLink("Delete", "DeleteHotels", new {id=item.HotelsId })
            </td>
        </tr>
}
    </tbody>
</table>
